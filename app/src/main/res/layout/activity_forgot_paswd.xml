<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#f3f3f3"
    android:fitsSystemWindows="true"
    tools:context="com.gmonetix.bookspivot.activity.ForgotPaswdActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"

        android:src="@drawable/bglogin2"
        android:scaleType="center"
        android:foreground="#d0689F38"/>


    <ImageView
        android:src="@drawable/logo_header"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-32dp"
        android:id="@+id/logo"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forgot\npassword"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"

            android:textColor="#fff"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:padding="8dp"
        android:background="@drawable/edittext_background"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:padding="@dimen/activity_horizontal_margin"

            android:text="We just need your registered Email Id to sent you password reset instructions."
            android:textColor="#000"
            android:textSize="14dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <!-- Login Button -->

        <Button
            android:id="@+id/btn_reset_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"

            android:backgroundTint="@color/colorAccent"
            android:text="Reset Password"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:backgroundTint="#fff"
            android:text="Back"

            android:textColor="@color/colorAccent" />

    </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</RelativeLayout>